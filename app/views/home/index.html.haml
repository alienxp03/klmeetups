%header
  .header-content
    .header-content-inner
      %h1 Malaysia Meetups!
      %hr
        %p Exploring the tech scene in Malaysia? Connect with designers, makers and engineers!
        %a.btn.btn-primary.btn-xl.page-scroll{:href => "#upcoming"} Check upcoming events!
%section#upcoming.bg-light-dark
  .container
    .row
      .col-lg-8.col-lg-offset-2.text-center
        %h2.section-heading Upcoming events
      .col-lg-12.text-center
        - @events.latest.first(10).each do |event|
          %hr.light
            %h3=link_to(event.name, event.url, target: '_blank')
            %p.text-faded= event.start_time.strftime('%d %B %Y, %I:%M %p')
            %p.text-faded= event.location.formatted_address
%section#contact
  .container
    .row
      .col-lg-8.col-lg-offset-2.text-center
        %h2.section-heading Get In Touch!
        %hr.primary
          %p 
      .col-lg-4.col-lg-offset-2.text-center
        %i.fa.fa-github-alt.fa-3x.wow
        %br
        %p= link_to 'Github', 'https://github.com/alienxp03/malaysiameetups', target: '_blank'
      .col-lg-4.text-center
        %i.fa.fa-envelope-o.fa-3x.wow
        %br
        %p
          %a{:href => "mailto:alienxp03@gmail.com"} alienxp03@gmail.com
